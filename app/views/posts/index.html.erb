<h1>INDEX</h1>
<% @posts.each do |post| %>
	<p><%= post.title %></p>
	<p><%= post.opinion %></p>
	<p><%= post.user_id %></p>
<% end %>

<h1>New Post</h1>
<%= form_for(@post) do |f| %>
	<h4>タイトル</h4>
	<%= f.text_field :title %>
	<h4>感想</h4>
	<%= f.text_area :opinion %>

	<%= f.submit '投稿' %>
<% end %>