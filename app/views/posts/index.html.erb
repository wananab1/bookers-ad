<div class="container-fluid">
	<div class="row">
		<div class="col-lg-3 sidebar">
			<div class="sidebar-inner">
				<h2 class="sidebar-title">User Infomation</h2>
				<%= attachment_image_tag @user, :profile_image, :fill, 90, 90, fallback: "no_image.jpeg", :class => "user-icon" %>
				<table class="table">
					<tbody>
						<tr>
							<th>Name</th>
							<th class="sidebar-user-info"><%= @user.name %></th>
						</tr>
						<tr>
							<th>Introduction</th>
							<th class="sidebar-user-info"><%= @user.intro %></th>
						</tr>
					</tbody>
				</table>
				<div class="newpost">
					<h2 class="sidebar-title">New Post</h2>
					<%= form_for(@post) do |f| %>
						<label for="post_title">Title</label>
						<%= f.text_field :title, :size => "45" %>
						<label for="post_opinion">Opinion</label>
						<%= f.text_area :opinion, :size => "45x5" %>
						<div>
							<%= f.submit 'Submit', :class => "btn-block" %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
		<div class="col-lg-9">
			<table>
				<thead>
					<tr>
						<th>title</th>
						<th>opinion</th>
						<th>user name</th>
					</tr>
				</thead>
				<tbody>
					<% @posts.each do |post| %>
						<tr>
							<td><%= link_to post.title, post_path(post.id) %></td>
							<td>
								<% if post.opinion.length >= 40 %>
									<%= post.opinion.slice(0, 40) %>...
								<% else %>
									<%= post.opinion %>
								<% end %>
							</td>
							<td><%= link_to post.user.name, user_path(post.user_id)%></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>