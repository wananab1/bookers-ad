<div class="container-fluid">
	<div class="row">
		<%= render 'users/sidebar', post: @post, user: @user %>
		<div class="col-lg-9">
			<table class="table">
				<h2 class="main-title">Users</h2>
				<thead>
					<tr>
						<th></th>
						<th>Name</th>
						<th>Introduction</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td class="col-lg-1">
								<%= link_to user_path(user.id) do %>
									<%= attachment_image_tag user, :profile_image, :fill, 45, 45, fallback: "no_image_s.jpeg" %>
								<% end %>
							</td>
							<td class="col-lg-3">
								<p class="post-title"><%= link_to user.name, user_path(user.id)%></p>
							</td>
							<td class="col-lg-8">
								<p class="post-opinion">
									<%= user.intro %>
								</p>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>